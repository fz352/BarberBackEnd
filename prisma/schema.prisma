generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./barber.db"
}

enum TypeUser {
  ADMIN
  BARBER
  CLIENT 
}

model Users{
  id           Int      @id @default(autoincrement())
  name         String
  telephone    String?   @unique
  password     String?
  email        String?   @unique
  cpf          String?   @unique
  dateCreated  DateTime @default(now())
  type         TypeUser
  verificationCode VerificationCode?
}
model Services {
  id       Int    @id @default(autoincrement())
  name     String
  duration Int
  price    Float
}

model Notifications {
  id               Int      @id @default(autoincrement())
  dateTimeCreated  DateTime @default(now())
  telephone        String
  status           String
  text             String
  DateTimeSend     DateTime?
}

model VerificationCode {
  telephone String @id
  code      String
  expiresAt DateTime
  user      Users   @relation(fields: [telephone], references: [telephone])
}